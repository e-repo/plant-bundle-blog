{
    "config": {
        "verbosity": "verbose",
        "git-directory": ".git"
    },
    "run": {
        "git": "/app/.git"
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "vendor/bin/ecs check --fix -q -n {$STAGED_FILES|of-type:php}"
            },
            {
                "action": "git add {$STAGED_FILES|of-type:php}"
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\Composer\\Action\\CheckLockFile",
                "options": []
            }
        ]
    }
}
